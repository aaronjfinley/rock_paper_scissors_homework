
<div class="container">
  <hr>

  <div class="row">
    <div class="col-md-4">
      <a href="/play/rock" class="btn btn-warning btn-block btn-lg">Play rock.</a>
    </div>

    <div class="col-md-4">
      <a href="/play/paper" class="btn btn-warning btn-block btn-lg">Play paper.</a>
    </div>

    <div class="col-md-4">
      <a href="/play/scissors" class="btn btn-warning btn-block btn-lg">Play scissors.</a>
    </div>
  </div>

  <hr>

  <div class="row">
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title text-center">You played <%= @user_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @user_move %>.png" class="img-responsive">
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title text-center">The computer played <%= @computer_move %>.</h3>
          </div>
          <div class="panel-body">
            <img src="/assets/images/<%= @computer_move %>.png" class="img-responsive">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="well">
          <h1 class="text-center">You <%= @outcome %>!</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5 class="panel-title">Summary</h5>
      </div>

      <table class="table table-hover table-striped">
        <tr>
          <th>When you played</th>
          <th>you won</th>
          <th>you lost</th>
          <th>you tied</th>
        </tr>

        <tr>
          <td>rock</td>
          <td><%= @all_moves.where({ :user_wins => 1, :user_move => "rock" }).count %></td>
          <td><%= @all_moves.where({ :computer_wins => 1, :user_move => "rock" }).count %></td>
          <td><%= @all_moves.where({ :tie => 1, :user_move => "rock" }).count %></td>
        </tr>

        <tr>
          <td>paper</td>
          <td><%= @all_moves.where({ :user_wins => 1, :user_move => "paper" }).count %></td>
          <td><%= @all_moves.where({ :computer_wins => 1, :user_move => "paper" }).count %></td>
          <td><%= @all_moves.where({ :tie => 1, :user_move => "paper" }).count %></td>
        </tr>

        <tr>
          <td>scissors</td>
          <td><%= @all_moves.where({ :user_wins => 1, :user_move => "scissors" }).count %></td>
          <td><%= @all_moves.where({ :computer_wins => 1, :user_move => "scissors" }).count %></td>
          <td><%= @all_moves.where({ :tie => 1, :user_move => "scissors" }).count %></td>
        </tr>

        <tr>
          <th>Total</th>
          <td><%= @all_moves.where({ :user_wins => 1 }).count %></td>
          <td><%= @all_moves.where({ :computer_wins => 1 }).count %></td>
          <td><%= @all_moves.where({ :tie => 1 }).count %></td>
        </tr>
      </table>
    </div>


    <div class="panel panel-info">
      <div class="panel-heading">
        <h5 class="panel-title">
          Complete history
          (<%= @all_moves.count %>)
        </h5>
      </div>

      <table class="table table-hover table-striped">
